<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/recyclerview_prof_dateil_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerview_prof_detail_height"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:id="@+id/recyclerview_lecturer_detail_imageview"
            android:layout_width="80dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/recyclerview_lecturer_detail_textview"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v7.widget.CardView>