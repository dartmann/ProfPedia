<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/recyclerview_lecturer_address_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyclerview_lecturer_address_cardview_textview_headerdescription"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recyclerview_prof_detail_height"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/recyclerview_lecturer_address_cardview_imageview_address"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/recyclerview_lecturer_address_cardview_textview_address"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recyclerview_prof_detail_height"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/recyclerview_lecturer_address_cardview_imageview_roomnumber"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/recyclerview_lecturer_address_cardview_textview_roomnumber"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recyclerview_prof_detail_height"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:id="@+id/recyclerview_lecturer_address_cardview_imageview_welearnurl"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/recyclerview_lecturer_address_cardview_textview_welearnurl"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>